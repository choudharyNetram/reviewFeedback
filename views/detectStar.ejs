<script> 
const starContainers = document.querySelectorAll('.star-rating');

starContainers.forEach(starContainer => {
    const stars = starContainer.querySelectorAll('input[type="radio"]');

    stars.forEach(star => {
        star.addEventListener('click', () => {
            const rating = parseInt(star.value);

            const currentStarIndex = Array.from(stars).indexOf(star);

            const previousStars = Array.from(stars).slice(0, currentStarIndex + 1);

            previousStars.forEach(previousStar => {
                const label = previousStar.nextElementSibling;
                label.classList.add('active');
            });

            const remainingStars = Array.from(stars).slice(currentStarIndex + 1);

            remainingStars.forEach(remainingStar => {
                const label = remainingStar.nextElementSibling;
                label.classList.remove('active');
            });

            console.log('Selected rating:', rating);
        });
    });
});


</script>